                    sh:nodeKind sh:IRI ;
                    sh:pattern "/projSpec"
                ] ;

    sh:property [
                    sh:path <https://dhplus.sbg.ac.at/ontology#P1_is_identified_by> ;
                    sh:class <https://dhplus.sbg.ac.at/ontology#NameOfThePerson> ;
                ] ;

    sh:property [

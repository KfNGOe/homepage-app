#################################################################
#    Classes
#################################################################

#dhplus
_:PersonShape
    a sh:NodeShape ;

#shacl validation
    sh:targetClass dhpluso:E21_Person ;
    sh:property [
                    sh:path owl:sameAs ;
                    sh:nodeKind sh:IRI ;
                    sh:pattern "http://viaf.org/viaf/" , "https://orcid.org/" ;
                ] ;
.

##name
_:NameShape
    a sh:NodeShape ;

#shacl validation
    sh:targetClass dhpluso:NameOfThePerson ;
    sh:property [
                    sh:path rdfs:label ;
                    sh:datatype rdf:langString ;
                    sh:languageIn "de" , "en" ;
                ] ;
    sh:property [
                    sh:path dhpluso:academicDegree ;
                    sh:datatype xsd:string ;
                ] ;
    sh:property [
                    sh:path dhpluso:biographicalOrHistoricalInformation ;
                    sh:datatype xsd:string ;
                ] ;
    sh:property [
                    sh:path dhpluso:functionOrRoleAsLiteral ;
                    sh:datatype rdf:langString ;
                    sh:languageIn "de" ;
                ] ;
.
